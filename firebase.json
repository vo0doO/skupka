{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": [
          "/index.html",
          "/style.css",
          "/clientControl.js"
        ]
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
